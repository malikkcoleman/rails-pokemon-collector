<h1> <%= @pokemon_card.name%> </h1>
<%= render "layouts/navbar" %>
<p>
  <img src=<%= @pokemon_card.image %> alt='card image'>
</p>

<p>
  <%= @pokemon_card.card_number%>
</p>

<p>
  <%= @pokemon_card.card_type%>
</p>
  <%= @pokemon_card.rarity%>
<p>
  <%= @pokemon_card.edition%>
</p>
<p>
  $<%= @pokemon_card.price%>
</p>


  <%= @pokemon_sets.each do |pokemon_set|%>
    <% if pokemon_set.id == @pokemon_card.pokemon_set_id%>
      <p><%= pokemon_set.name%></p>
      <% break %>
    <% end %>
  <% end %>


<div>
  <%= link_to "Edit this pokemon card", edit_pokemon_card_path(@pokemon_card) %> |
  <%= link_to "Back to pokemon cards", pokemon_cards_path %>

  <%= button_to "Destroy this pokemon card", @pokemon_card, method: :delete %>
</div>
